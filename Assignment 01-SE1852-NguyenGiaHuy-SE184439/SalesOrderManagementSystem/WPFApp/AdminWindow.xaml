<Window x:Class="WPFApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="AdminWindow" Height="400" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <TextBlock x:Name="txtWelcome" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <Button Content="Manage Customers" Height="40" Margin="0,5" Click="ManageCustomers_Click"/>
            <Button Content="Manage Products" Height="40" Margin="0,5" Click="ManageProducts_Click"/>
            <Button Content="Create/View Orders" Height="40" Margin="0,5" Click="ManageOrders_Click"/>
            <Button Content="Reports" Height="40" Margin="0,5" Click="Reports_Click"/>
            <Button Content="Logout" Height="40" Margin="0,20,0,0" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Window>
