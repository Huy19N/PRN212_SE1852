<Window x:Class="HelloApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="_User Name: "
               Target="{Binding ElementName=txtUsername}"
               HorizontalAlignment="Left" Margin="66,31,0,0" VerticalAlignment="Top" Height="24" Width="79"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="150,37,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="94" Height="18"/>
        <Label Content="_Password: "
               Target="{Binding ElementName=txtPassword}"
               HorizontalAlignment="Left" Margin="66,66,0,0" VerticalAlignment="Top" Height="26" Width="65"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="150,70,0,0" VerticalAlignment="Top" Width="94"/>
        <Button x:Name="txtLogin" Content="Login" HorizontalAlignment="Left" Margin="150,112,0,0" VerticalAlignment="Top" Height="20" Click="txtLogin_Click"/>
        <Button x:Name="txtExit" Content="Exit" HorizontalAlignment="Left" Margin="203,112,0,0" VerticalAlignment="Top" Height="20" Width="32" Click="txtExit_Click"/>

    </Grid>
</Window>
