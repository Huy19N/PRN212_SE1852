<Window x:Class="MyStoreWPFEntityFramework.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreWPFEntityFramework"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Welcome Login" HorizontalAlignment="Center" Margin="0,72,0,0" VerticalAlignment="Top" Width="120">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0.0" Color="blue" ></GradientStop>
                    <GradientStop Offset="0.5" Color="Aqua" ></GradientStop>
                    <GradientStop Offset="1" Color="AliceBlue" ></GradientStop>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="226,135,0,0" VerticalAlignment="Top" Width="76"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="226,182,0,0" VerticalAlignment="Top" Width="76"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="313,246,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.676,0.643" Height="24" Width="56" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="400,246,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.676,0.643" Height="24" Width="56"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,182,0,0" VerticalAlignment="Top" Width="120" Height="26"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Center" Margin="0,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
